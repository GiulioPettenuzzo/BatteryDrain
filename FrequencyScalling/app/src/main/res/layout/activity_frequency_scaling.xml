<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_frequency_scaling"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.giuli.frequencyscalling.FrequencyScaling">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/current_frequency"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:layout_below="@+id/current_frequency"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/max_freq_CPU0"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:layout_below="@+id/max_freq_CPU0"
        android:layout_alignLeft="@+id/max_freq_CPU0"
        android:layout_alignStart="@+id/max_freq_CPU0"
        android:id="@+id/min_freq_CPU0"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:layout_below="@+id/min_freq_CPU0"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/max_freq_CPU3"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:layout_below="@+id/max_freq_CPU3"
        android:layout_alignLeft="@+id/max_freq_CPU3"
        android:layout_alignStart="@+id/max_freq_CPU3"
        android:id="@+id/min_freq_CPU3"/>

    <TextView
        android:text="max freq CPU_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:layout_above="@+id/min_freq_CPU3"
        android:layout_toEndOf="@+id/current_frequency"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:text="max freq CPU_0"
        android:layout_above="@+id/min_freq_CPU0"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:text="min freq CPU_0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:layout_above="@+id/max_freq_CPU3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:text="min freq CPU_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:layout_alignBottom="@+id/min_freq_CPU3"
        android:layout_alignRight="@+id/textView2"
        android:layout_alignEnd="@+id/textView2"/>

    <Button
        android:text="impose frequency"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/impose_frequency_button"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/textView5"
        android:layout_alignStart="@+id/textView5"/>
</RelativeLayout>
